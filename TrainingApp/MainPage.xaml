<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="TrainingApp.MainPage">

    <VerticalStackLayout>
    <!--should be dynamic with months-->
        <FlexLayout x:Name="flexLayout" BackgroundColor="Black" WidthRequest="180" HeightRequest="47" VerticalOptions="Start" HorizontalOptions="Center"  Wrap="Wrap"></FlexLayout>

        <HorizontalStackLayout Margin="50">
            <Button Clicked="Present_Clicked"  Text="Went To Gym"></Button>
            <Button Clicked="RestDay_Clicked" Text="Rest Day"></Button>
            <Button Clicked="Present_Absent" Text="Didnt go"></Button>

        </HorizontalStackLayout>
    </VerticalStackLayout>
</ContentPage>
